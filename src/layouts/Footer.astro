---
import { Image } from '@astrojs/image/components';
---

<footer id="footer">
   <div class="container">
    <Image 
        class="logo"
        src={import("../images/logo.webp" )}
        alt="Logo"
    />
    <div class="ico-container">
        <a href="mailto:km.atmospheres@gmail.com">
            <Image class="icon" src={import("../images/email_icon.webp")} alt="email icon" />
        </a>
        <a href="https://www.instagram.com/km.atmospheres/">
            <Image class="icon" src={import("../images/instagram_icon.webp" )} alt="instagram icon" />
        </a>
    </div>
   </div>
   <div class="text">
    <div class="info">
        <span>
            <p class="section">Contacto</p>
            <p>km.atmospheres@gmail.com</p>
        </span>
        <span>
            <p class="section">Ubicación</p>
            <p>...</p>
        </span>
    </div>
    <small>KM Atmospheres ©2023</small>
   </div>
</footer>

<style>
    footer {
        bottom: 0;
        width: 100%;
        height: 250px;
        display: flex;
        padding: 10px 0 10px 0;
        background-color: #FAF8F6;
    }
    .container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 20%;
        padding: 20px 0 15px 20px;
    }
    .logo {
        width: 140px;
        height: 100px;
    }
    .text {
        width: 70%;
        margin-left: 30%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 15px 0 15px 0;
    }
    .section {
        font-size: 20px;
        font-family: 'PPTelegraf-UltraBold', serif;
    }
    p {
      font-size: 1rem;
      font-family: 'PPTelegraf-UltraLight', sans-serif;
    }
    .info {
        display: flex;
        justify-content: space-around;
    }
    small {
        font-size: 0.85rem;
        font-family: 'PPTelegraf-Regular', sans-serif;
        display: flex;
        justify-content: flex-end;
        margin-right: 5%;
    }
    .ico-container {
        display: flex;
        align-items: center;
        margin-left: 10%;
        padding: 10px 0 10px 0;
    }
    .icon {
        width: 28px;
        height: 28px;
        border: 2px solid #000;
        border-radius: 50%;
        padding: 7px;
        margin: 0 5px 0 5px;
    }

    /* Media Queries */
    @media (min-width: 280px) and (max-width: 649px){
        footer {
            width: 100%;
            display: flex;
            flex-direction: column;
            padding: 10px 0 10px 0;
        }
        .container {
            flex-direction: row;
            width: 95%;
            padding: 20px 2.5% 15px 2.5%;
        }
        .logo {
            width: 120px;
            height: 80px;
        }   
        .text {
            width: 100%;
            margin-left: 0;
            flex-direction: column;
            align-items: center;
            padding: 0 0 5px 0;
        }
        .section {
            font-size: 16px;
        }
        p {
            font-size: 12px;
        }
        .info {
            width: 100%;
            display: flex;
            justify-content: space-around;
        }
        small {
            font-size: 11px;
            justify-content: center;
            margin-right: 0;
            margin-top: 15px;
        }

        .icon {
            width: 24px;
            height: 24px;
            border: 2px solid #000;
            border-radius: 50%;
            padding: 5px;
            margin: 0 5px 0 5px;
        }
    }
    @media (min-width: 650px) and (max-width: 1149px){
        footer {
            width: 100%;
            display: flex;
            padding: 10px 0 10px 0;
        }
        .logo {
            width: 120px;
            height: 80px;
        }   
        .text {
            width: 70%;
            margin-left: 30%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 15px 0 15px 0;
        }
        .section {
            font-size: 18px;
        }
        p {
            font-size: 15px;
        }
    }
</style>