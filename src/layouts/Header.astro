---
import { Image } from '@astrojs/image/components';
---

<header id="head">
    <div style="cursor: pointer;">
        <Image src={import("../images/logo_white.png")} alt="logo" />
    </div>
    <div class="links">
        <a href="#trabajo">NUESTRO TRABAJO</a>
        <a href="#contacto">CONTACT√ÅNOS</a>
    </div>
</header>

<style>
    header {
        width: 95%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: absolute;
        padding: 1.75% 2.5% 1.75% 2.5%;
        background-color: transparent;
    }
    img {
        width: 135px;
        height: 100px;
        object-fit: contain;
    }
    .links {
        width: 25%;
        padding: 20px 10px 20px 10px;
        display: flex;
        justify-content: space-evenly;
    }
    a {
        font-size: 16px;
        letter-spacing: 1px;
        text-decoration: none;
        color: #fff;
        font-family: 'PPTelegraf-Regular';
    }
    :hover {
        color: rgb(255, 255, 255, 0.7);
    }

    /* Media Queries */
    @media (min-width: 280px) and (max-width: 649px) {
        header {
            width: 95%;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        img {
            width: 150px;
            height: 100px;
        }
        .links {
            width: 100%;
            justify-content: center;
        }
        a {
            font-size: 0.9rem;
            margin: 0 5% 0 5%;
        }
    }
    @media (min-width: 650px) and (max-width: 1149px) {
        header {
            width: 95%;
        }
        img {
            width: 150px;
            height: 100px;
        }
        .links {
            width: 33.33%;
        }
        a {
            font-size: 0.85rem;
        }
    }
</style>